{
	"name": "@playvision/playvision-app",
	"version": "0.3.0",
	"description": "PlayVision integrated stream helper",
	"author": "David Comor",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"buildAll": "electron-builder --mac --windows --linux",
		"buildWin": "electron-builder --windows",
		"buildMac": "electron-builder --mac",
		"buildLinux": "electron-builder --linux",
		"jest": "jest",
		"wdio": "wdio run ./wdio.conf.js",
		"test": "npm run jest && npm run wdio"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@wdio/cli": "^9.0.7",
		"@wdio/local-runner": "^9.0.7",
		"@wdio/mocha-framework": "^9.0.6",
		"@wdio/spec-reporter": "^9.0.7",
		"electron": "^31.3.1",
		"electron-builder": "^24.13.3",
		"jest": "^29.7.0",
		"wdio-intercept-service": "^4.4.1"
	},
	"dependencies": {
		"aws-sdk": "^2.1687.0",
		"electron-store": "^8.2.0",
		"express": "^4.19.2",
		"obs-websocket-js": "^5.0.6",
		"update-electron-app": "^3.0.0",
		"wdio-electron-service": "^7.0.1"
	},
	"build": {
		"publish": null,
		"appId": "com.playvision.playvisionApp",
		"productName": "PlayVision",
		"files": [
			"**/*",
			"!**/.gitignore",
			"!**/.git/**",
			"!**/.vscode/**"
		],
		"directories": {
			"output": "dist"
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"arm64"
					]
				}
			],
			"icon": "build/logo.icns",
			"category": "public.app-category.utilities"
		},
		"dmg": {
			"background": "build/background.png",
			"iconSize": 110,
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			],
			"window": {
				"width": 540,
				"height": 380
			}
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"arm64"
					]
				}
			],
			"icon": "build/logo.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "build/logo.png"
		}
	}
}
